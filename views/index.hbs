<!DOCTYPE html>
<html ng-app="PriceTracker">
  <head>
    <title>Price Tracker for Console Games</title>
      
      <link rel='stylesheet' href='/stylesheets/bootstrap.min.css' />
      <link rel='stylesheet' href='/stylesheets/style.css' />

      <!--Angular CDN Imports-->
      <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.5.8/angular.min.js"></script>
      <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.5.8/angular-route.js"></script>
      
      <!-- Angular Local Imports -->
      <script src='javascripts/angularApp.js'></script>
      <script src='javascripts/controllers/ps4Controller.js'></script>
      <script src='javascripts/controllers/mainController.js'></script>
      <script src='javascripts/controllers/xboxController.js'></script>
  </head>
  <body>
  	<nav class="navbar navbar-default">
              <ul class="nav navbar-nav">
                  <li id="home" class="active"><a href="#/">
                    <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
                    	Home
                    </a></li>
                  <li id="ps4"><a href="#ps4">
                    <span class="glyphicon glyphicon-film" aria-hidden="true"></span>
                    	Playstation 4
                  </a></li>
                  <li id="xbox"><a href="#xbox">
                    <span class="glyphicon glyphicon-blackboard" aria-hidden="true"></span>
                      Xbox One
                  </a></li>
                  <li><a href="/admin">
                    <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
                  </a></li>
              </ul>
              <form class="navbar-form navbar-right">
                  <div class="form-group">
                      <input type="text" class="form-control" placeholder="Search Games" disabled>
                  </div>
                  <button type="submit" class="btn btn-default" disabled>Search</button>
              </form>
  	</nav>
  	<div id="content" ng-view></div>

  </body>
</html>
